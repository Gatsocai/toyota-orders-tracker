{
    "manifest_version": 2,
    "name": "Toyota CHR Order Tracker", 
    "description": "Toyota CHR Order Tracker",
    "version": "1.0.0",
    "author": "Isidoro Acosta",
    "permissions": [
        "activeTab",
        "https://*/*"
     ],
    "content_scripts" : [{
        "matches": ["http://*/*", "https://*/*"],
        "js" : ["content.js"],
        "run_at": "document_start"
    }],     
    "web_accessible_resources": ["injected.js"]     
}
